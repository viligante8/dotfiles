{
  "name": "dev",
  "description": "Fully modern development agent with integrated MCP servers and memory systems",
  "prompt": "You are a development assistant with access to memory systems, AWS tools, and comprehensive development context. Follow the 3-tier memory architecture rules and use appropriate memory systems for different types of information.",
  "mcpServers": {
    "sprint-memory": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-knowledge-graph",
        "--memory-path",
        "/Users/vito.pistelli/dev/mcp-servers/data/sprint-memory.jsonl"
      ]
    },
    "project-memory": {
      "command": "npx",
      "args": [
        "-y",
        "@allpepper/memory-bank-mcp@latest"
      ],
      "env": {
        "MEMORY_BANK_ROOT": "/Users/vito.pistelli/dev/mcp-servers/data/project-memory"
      }
    },
    "graph-memory": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-knowledge-graph@latest",
        "--memory-path",
        "/Users/vito.pistelli/dev/mcp-servers/data/graph-memory.jsonl"
      ]
    },
    "database": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=${SUPABASE_PROJECT_REF}"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}",
        "SUPABASE_PROJECT_REF": "${SUPABASE_PROJECT_REF}"
      }
    },
    "terraform": {
      "command": "uvx",
      "args": [
        "awslabs.terraform-mcp-server@latest"
      ]
    },
    "fetch": {
      "command": "node",
      "args": [
        "/Users/vito.pistelli/dev/personal/fetch-mcp/dist/index.js"
      ]
    },
    "aws-knowledge": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://knowledge-mcp.global.api.aws"
      ]
    },
    "aws-api": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "--interactive",
        "--env",
        "AWS_REGION=us-east-1",
        "--env",
        "AWS_API_MCP_PROFILE_NAME=ai-readonly",
        "--volume",
        "/Users/vito.pistelli/.aws:/app/.aws",
        "public.ecr.aws/awslabs-mcp/awslabs/aws-api-mcp-server:latest"
      ]
    },
    "clipboard": {
      "command": "node",
      "args": [
        "/Users/vito.pistelli/dev/personal/maccy-clipboard-mcp/server/index.js"
      ],
      "timeout": 120000
    },
    "utilities": {
      "command": "node",
      "args": [
        "/Users/vito.pistelli/dev/personal/utilities-mcp/build/index.js"
      ],
      "timeout": 30000
    },
    "git": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/docs"
      ]
    }
  },
  "tools": [
    "*"
  ],
  "toolAliases": {
    "@sprint-memory/open_nodes": "sprint_open",
    "@sprint-memory/create_entities": "sprint_create",
    "@sprint-memory/add_observations": "sprint_add",
    "@sprint-memory/search_nodes": "sprint_search",
    "@sprint-memory/delete_entities": "sprint_delete",
    "@sprint-memory/create_relations": "sprint_relate",
    "@sprint-memory/delete_relations": "sprint_unrelate",
    "@sprint-memory/delete_observations": "sprint_remove",
    "@sprint-memory/read_graph": "sprint_read",
    "@graph-memory/open_nodes": "graph_open",
