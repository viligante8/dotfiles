    "@graph-memory/add_observations": "graph_add",
    "@graph-memory/search_nodes": "graph_search",
    "@graph-memory/delete_entities": "graph_delete",
    "@graph-memory/create_relations": "graph_relate",
    "@graph-memory/delete_relations": "graph_unrelate",
    "@graph-memory/delete_observations": "graph_remove",
    "@graph-memory/read_graph": "graph_read",
    "memory_bank_write": "project_write",
    "memory_bank_read": "project_read",
    "@git/git_status": "status",
    "@clipboard/clip_recent": "recent_clips"
