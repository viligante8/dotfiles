  "toolsSettings": {
    "fs_write": {
      "allowedPaths": [
        "~/dev/**",
        "~/Documents/**",
        "~/Downloads/**",
        "~/Desktop/**",
        "/tmp/**"
      ],
      "deniedPaths": [
        "/System/**",
        "/usr/**"
      ]
    }
  },
  "resources": [
    "file://README.md",
    "file://AmazonQ.md",
    "file://.amazonq/rules/**/*.md",
    "file://docs/**/*.md",
    "file://CONTRIBUTING.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git status --porcelain"
      },
      {
        "command": "pwd"
      }
    ],
    "userPromptSubmit": [
      {
        "command": "git branch --show-current"
      }
    ]
  }
